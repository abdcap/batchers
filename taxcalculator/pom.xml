                <version>1.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>be.cegeka.batchers</groupId>
                <artifactId>taxcalculator-application</artifactId>
                <version>1.0-SNAPSHOT</version>
                <type>test-jar</type>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>be.cegeka.batchers</groupId>
