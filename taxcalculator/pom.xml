    <properties>
        <spring.framework.version>4.0.3.RELEASE</spring.framework.version>
        <spring.batch.version>3.0.0.M3</spring.batch.version>
        <hibernate.version>4.3.1.Final</hibernate.version>
        <slf4j.version>1.7.2</slf4j.version>
        <junit.version>4.11</junit.version>
        <commons.dbcp.version>1.4</commons.dbcp.version>
        <commons.io.version>2.4</commons.io.version>
        <hsqldb.version>2.3.2</hsqldb.version>
        <xdocreport.version>1.0.4</xdocreport.version>
        <log4j.version>1.2.17</log4j.version>
        <maven.compiler.version>3.1</maven.compiler.version>
        <maven.exec.plugin.version>1.2.1</maven.exec.plugin.version>
        <maven.jar.plugin.version>2.4</maven.jar.plugin.version>
        <maven.assembly.plugin.version>2.4</maven.assembly.plugin.version>
        <compiler.target.version>1.8</compiler.target.version>
        <compiler.source.version>1.8</compiler.source.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <modules>
        <module>taxcalculator-stubwebservice</module>
        <module>taxcalculator-application</module>
        <module>taxcalculator-batch</module>
        <module>taxcalculator-presentation</module>
        <module>taxcalculator-to</module>
        <module>taxcalculator-batch-api</module>
    </modules>

    <repositories>
        <repository>
            <id>spring-milestones</id>
            <name>Spring Milestones</name>
            <url>http://repo.spring.io/milestone</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <dependencyManagement>
